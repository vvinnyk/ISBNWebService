<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <logger name="ISBNWebService" level="DEBUG">
        <appender-ref ref="console"/>
    </logger>

</configuration>